generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://jwright1902@localhost:5432/Anime?schema=public"
}

// Define your Anime model
model Anime {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  episodes    Int?
  releaseDate DateTime?
}

// Users
model Users {
  id  Int     @id       @default(autoincrement())
  username    String?   @unique
  password    String?
  firstname   String?
  lastname    String?
  email       String?
  admin       Boolean   @default(false)
  tokens      String?
  
}